{
  "name": "x2-launcher",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "cd frontend && npx vite",
    "dev:backend": "cd backend && python main.py",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "build": "cd frontend && npx vite build",
    "preview": "cd frontend && npx vite preview",
    "electron:dev": "electron electron/main.js"
  },
  "build": {
    "appId": "com.x2launcher.app",
    "productName": "XÂ² Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "src/**/*",
      "main.py",
      "config.json",
      "requirements.txt"
    ],
    "win": {
      "target": "nsis",
      "icon": "./frontend/public/assets/icon.ico"
    },
    "mac": {
      "icon": "./frontend/public/assets/icon.ico"
    },
    "linux": {
      "icon": "./frontend/public/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/app.ico"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "python-shell": "^5.0.0"
  }
}
