{
  "name": "x2-launcher",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "node launch-dev.js",
    "install-deps": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm run build && cd .. && electron-builder",
    "cleanup": "node scripts/cleanup.js",
    "predev": "npm run cleanup && node scripts/create_assets.js"
  },
  "build": {
    "appId": "com.x2.launcher",
    "productName": "XÂ² Launcher",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "src/**/*",
      "main.py",
      "config.json",
      "requirements.txt"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/app.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/app.ico"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "python-shell": "^5.0.0"
  }
}
